@model Product
@{
	Layout = "_DashBoardLayout";
}
         <div class="overview">
                    <div class="title">
                        <i class="uil uil-tachometer-fast-alt"></i>
                        <span class="text">Adding Product</span>
                    </div>

                    <div>
                        <form asp-action="Edit" method="post" class="row">
                            <input type="hidden" asp-for="@Model.Id" />
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Product Name</label>
                                <input
                                    type="text"
                                    asp-for="Name"
                                    value="@Model.Name"
                                    id=""
                                    class="form-control"
                                    placeholder=""

                                />

                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Product Description</label>
                                <textarea
                                    type="text"
                                    asp-for="Description"
                                    value="@Model.Description"
                                    id=""
                                    class="form-control"
                                    placeholder=""

                                ></textarea>
                            </div>
                            <div class="mb-3 col-lg-6">
                                <label asp-for="Quantity" class="form-label">Product Quantity</label>
                                <input
                                    type="number"
                                    asp-for="Quantity"
                                    value="@Model.Quantity"
                                    id=""
                                    class="form-control"
                                    placeholder=""

                                ></input>
                            </div>
                            <div class="mb-3 col-lg-6">
                                <label asp-for="Price" class="form-label">Product Price</label>
                                <input
                                    type="number"
                                    asp-for="Price"
                                    value="@Model.Price"
                                    id=""
                                    class="form-control"
                                    placeholder=""

                                ></input>
                            </div>
                            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                                <div class="form-check">
                                    <input class="form-check-input"  asp-for="EnableSize" value="@Model.EnableSize" type="checkbox" id="" />
                                    <label class="form-check-label" asp-for="EnableSize"> Enable Product Size </label>
                                </div>


                            </div>

                                <div class="mb-3 col-lg-6">
                                    <label asp-for="CompanyId" class="form-label">company</label>
                                    <select
                                        class="form-select "
                                        asp-for="CompanyId">
                    @{
                        if(Model.CompanyId == 1)
                        {
                             <option >Select one</option>
                             <option value="1" selected>nike</option>
                             
                            <option value="2">adidas</option>
                        }
                        else if (Model.CompanyId == 2)
                        {
                                                         <option >Select one</option>
                             <option value="1" >nike</option>
                             
                            <option value="2" selected>adidas</option>
                            
                        }else{
                              
                                        <option selected>Select one</option>
                                        <option value="1">nike</option>
                                        <option value="2">adidas</option>
                        }
                    }
       
                                    </select>
                                </div>

                                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                                    <input class="form-control" type="file" id="formFile">
                                </div>

                           <div class="col-lg-12 d-flex justify-content-center  ">

                                <button type="submit" class="btn btn-primary">Submit</button>

                           </div>
                        </form>

                    </div>
                </div>